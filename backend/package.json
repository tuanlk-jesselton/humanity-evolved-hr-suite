{
    "name": "humanity-hr-backend",
    "version": "1.0.0",
    "description": "NestJS backend for Humanity HR RBAC demo",
    "main": "dist/main.js",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "node dist/main",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "migration:run": "npm run typeorm migration:run -- -d ./data-source.ts",
        "migration:generate": "npm run typeorm migration:generate -- -d ./data-source.ts",
        "migration:create": "npm run typeorm migration:create -- -n"
    },
    "_moduleAliases": {
        "@app": "./dist",
        "@auth": "./dist/auth"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.0.2",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^7.1.15",
        "@nestjs/typeorm": "^10.0.1",
        "@types/passport-jwt": "^3.0.13",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cls": "^0.1.5",
        "dotenv": "^16.5.0",
        "jsonwebtoken": "^9.0.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.10.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^5.0.1",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/jest": "^29.5.14",
        "@types/module-alias": "^2.0.4",
        "@types/node": "^20.11.0",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "module-alias": "^2.2.3",
        "supertest": "^7.1.1",
        "ts-jest": "^29.2.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2"
    }
}