{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "plugins": ["@nestjs/swagger/plugin"],
        "tsConfigPath": "tsconfig.build.json"
    },
    "projects": {
        "app": {
            "type": "application",
            "root": "",
            "entryFile": "main",
            "sourceRoot": "src",
            "compilerOptions": {
                "tsConfigPath": "tsconfig.build.json"
            }
        }
    }
}